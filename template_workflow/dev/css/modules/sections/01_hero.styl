.hero {
    background-size cover
    background-position center
    min-height 400px
    position relative
    display flex
    align-items center

    @media (max-width: 575px) {
        min-height 400px
    }

    h1 {
        font-size 80px
        margin-bottom 40px

        @media (max-width: 575px) {
            font-size 45px
        }
    }
}
