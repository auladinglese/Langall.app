// font colors---------------------------------------------------------------------------------------------
font_colors = 'primary' $primary, 'secondary' $secondary, 'palette-1' $palette-1, 'palette-2' $palette-2, 'palette-3' $palette-3, 'palette-4' $palette-4, 'water-1' $water-1, 'water-2' $water-2, 'black' $black, 'grey' $grey, 'light-grey' $light-grey, 'white' $white

.font {
    for font_color in font_colors {
        &-{font_color[0]} {
            color font_color[1]
        }
    }
}

.font-teacher {
    color $teacher-color
}

.welcome-type-1 {
    font-size 25px
    font-family 'Montserrat'
    font-weight 200
    color $grey
}

.giant-type-1 {
    font-size 80px
    margin-bottom 40px

    @media (max-width: 575px) {
        font-size 45px
    }
}

.link-secondary {
    color $secondary

    &:hover {
        color $secondary
    }
}

.link-grey {
    color $grey

    &:hover {
        color $grey
    }
}
