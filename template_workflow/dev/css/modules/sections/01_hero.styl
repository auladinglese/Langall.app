.hero {
    background-size cover
    background-position center
    // min-height 600px
    min-height 100vh
    position relative
    display flex
    align-items center
    color $white

    @media (max-width: 575px) {
        min-height 100vh
        padding-bottom 60px
    }

    h1 {
        font-size 90px
        margin-bottom 40px

        @media (max-width: 575px) {
            font-size 45px
        }
    }

    .btn {
        margin 4px
    }
}

#hero-1 {
    background-image url('../img/hero-3.jpg')
    opacity .95
}

.full-bleed-img {
    background-image url('../img/hero-3.jpg')
    background-size cover
    background-position center
    padding-top 100px
    padding-bottom 100px
}