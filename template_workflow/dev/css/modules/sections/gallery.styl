.teacher-promo-gallery {
    &__item {
        padding 15px
        height calc(50vh - 250px)
        min-height 200px

        @media (max-width: 575px) {
            padding 10px
        }
    }

    &__img-cont {
        background-color #eeeeee
        height 100%
        border-radius 15px
        overflow hidden
    }

    img {
        width 100%
        height 100%
        object-fit cover
        opacity .88
    }
}