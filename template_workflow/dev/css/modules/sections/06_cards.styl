.teacher-card-wr {
    margin-bottom 15px
    // border 4px solid $primary
    border-radius 4px
    box-shadow 0 0 10px 0 rgba(0, 0, 0, .2)
}

.teacher-card {
    text-align left
    position relative
    display flex

    &__img-container {
        width 35%
        display flex
        justify-content center
        align-items center

        @media (max-width: 575px) {
            display none
        }

        img {
            max-width 80px
            max-height 80px

            @media (max-width: 575px) {
                max-width 60px
                max-height 60px
            }
        }
    }

    &__text {
        padding 20px 20px 20px 0
        width 65%

        @media (max-width: 575px) {
            padding 15px 20px
        }

        h4 {
            font-weight bold

            @media (max-width: 575px) {
                font-size 18px
                padding-left 30px
                padding-bottom 15px
            }
        }

        h5 {
            color $primary

            @media (max-width: 575px) {
                font-size 16px
            }
        }

        p {
            color $grey

            @media (max-width: 575px) {
                font-size 14px
                margin-bottom 3px
            }
        }
    }

    &__bookmark {
        position absolute
        top 18px
        left 18px

        img {
            height 30px
        }
    }

    &__price {
        position absolute
        top 20px
        right 20px
        color $black !important

        @media (max-width: 575px) {
            font-size 14px
        }
    }

    &__rating {
        text-align right
        position absolute
        bottom 20px
        right 20px

        p {
            margin-bottom 3px
            font-size 20px
        }

        small {
            font-size 12px
        }
    }
}

.more-teacher-info {
    color $primary

    &:hover {
        color $primary
        text-decoration none
    }
}

.teacher-extra-info {
    color $grey
    padding 0 30px 30px
    width 70%
    text-align left

    @media (max-width: 767px) {
        width 100%
        font-size 14px
    }
}